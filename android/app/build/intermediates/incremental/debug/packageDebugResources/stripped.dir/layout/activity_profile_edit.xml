<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp" />

        <!-- Photo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Photo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/edit_text_background"
            android:scaleType="centerCrop"
            android:contentDescription="Profile photo"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="24dp" />

        <!-- Bio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/bioInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tell us about yourself..."
            android:textColorHint="@color/input_hint"
            android:textColor="@color/input_text"
            android:textSize="16sp"
            android:minLines="3"
            android:maxLines="5"
            android:padding="18dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp" />

        <!-- Currently Reading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currently Reading"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/addCurrentlyReadingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add Book"
            android:textColor="@color/button_text_primary"
            android:backgroundTint="@color/button_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/currentlyReadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp" />

        <!-- Favorite Books -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Books"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/addFavoriteBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add Book"
            android:textColor="@color/button_text_primary"
            android:backgroundTint="@color/button_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/favoriteBooksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Profile"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/button_text_primary"
            android:backgroundTint="@color/button_primary"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/viewCardButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="View My Card"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/button_text_primary"
            android:backgroundTint="@color/button_primary"
            android:elevation="4dp"
            android:layout_marginBottom="40dp" />
    </LinearLayout>
</ScrollView>
