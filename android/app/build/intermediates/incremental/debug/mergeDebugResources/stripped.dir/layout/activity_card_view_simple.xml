<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="600dp">

            <!-- Photo -->
            <ImageView
                android:id="@+id/cardPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_profile_placeholder"
                android:contentDescription="Profile photo" />

            <!-- Info Overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/name_overlay_background"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/cardAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/text_white"
                        android:alpha="0.9" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cardGenres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_white"
                    android:alpha="0.9"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/cardBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:maxLines="5"
                    android:scrollbars="vertical" />

                <TextView
                    android:id="@+id/cardBooksTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Favorite Books:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:alpha="0.9"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/cardBooks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_white"
                    android:alpha="0.9"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
